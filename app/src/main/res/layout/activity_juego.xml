                android:layout_row="3"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:layout_row="4"
                android:layout_column="2" />

            <!--<fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="325dp"
                android:layout_height="300dp"
                android:id="@+id/retos"
                tools:context="com.fitgo.Juego"
                android:layout_row="5"
                android:layout_column="2"
                android:name="com.fitgo.ListaJuegos$PlaceholderFragment" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reto 1: Encuentra un lugar"
                android:id="@+id/txtNumPista"
                android:layout_row="5"
                android:layout_column="2"
                android:textColor="#60d2ff" />

            <TextView
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:text="@string/juego1_pista1"
                android:id="@+id/txtPista"
                android:layout_row="6"
                android:layout_column="2"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:layout_row="7"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¿Reto completado?"
                android:id="@+id/textView26"
                android:layout_row="8"
                android:layout_column="2"
                android:textColor="#60d2ff" />

            <ImageView
                android:layout_width="325dp"
                android:layout_height="70dp"
                android:id="@+id/imageView5"
                android:layout_row="9"
                android:layout_column="2"
                android:background="@drawable/agitar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView28"
                android:layout_row="10"
                android:layout_column="2" />

            <Button
                android:layout_width="325dp"
                android:layout_height="42dp"
                android:text="O completa reto"
                android:id="@+id/completarButton"
                android:layout_row="11"
                android:layout_column="2"
                android:background="@drawable/fondobtn"
                android:onClick="completarBoton"
                android:textColor="#ffffff" />

        </GridLayout>


</RelativeLayout>

